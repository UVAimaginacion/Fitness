<div class="jumbotron jumbotron-tips">
  <div class= "titulo-index">
    <h1>FIT TIPS</h1>
    <p>Encuentra los mejores consejos de alimentaci√≥n y ejercicios para tu rutina diaria.</p>
  </div>
</div>

<div class="container">

  <%= form_tag tips_path, :method => 'get', :id => 'tips_search' do %>
    <div class='buscador'>
      <%= text_field_tag :search, params[:search], class:'form-control submit', placeholder: 'Buscar Tip' %>
      <!-- < submit_tag 'Buscar Tip', :name => nil, class:'btn btn-default' %> -->
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          <span class="glyphicon glyphicon-thumbs-up"></span>
      <% end %>
    </div>

    <div id="tips">
      <%= render 'tip' %>
    </div>
  <% end %>

  <% if can? :manage, @tips %>
    <div class="link_nuevo">
      <%= link_to 'Crear un nuevo tip',  new_tip_path %>
    </div>
  <% end %>
</div>



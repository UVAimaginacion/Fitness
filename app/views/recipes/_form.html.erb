    <div class="form-group">
      <%= f.label :name, 'Nombre' %>
      <%= f.text_area :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :ingredient, 'Ingredientes' %><br>
      <%= f.text_area :ingredient, autofocus: true, class: "form-control", size: "10x10" %>
    </div>


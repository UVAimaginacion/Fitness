<div class="container">
  <div class="jumbotron">
    <h1>Recetas</h1>
  </div>

  <div class="show_alimentacion">
    <h2><%= @recipe.name %></h2>

    <p>
      <%= @recipe.ingredient %>
    </p>

    <p>
    <h4>Descripci√≥n:</h4><br>
      <%= @recipe.description.gsub(/\n/, '<br/>').html_safe %>
    </p>

    <p class="show_imagen">
      <%= image_tag @recipe.image.url %>
    </p>
  </div>

  <div class="container">
    <%= link_to 'Editar Receta', edit_recipe_path(@recipe) %> |
    <%= link_to 'Volver a Recetas', recipes_path %>
  </div>
</div>